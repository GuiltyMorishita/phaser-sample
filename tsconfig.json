{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "src",
    "sourceMap": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
